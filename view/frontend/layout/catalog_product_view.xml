<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="sare.params">
            <block class="SARE\SAREhub\Block\EventTrackingCode" name="sare.sarehub.tracking_code" as="sare.sarehub.tracking_code" >
                <arguments>
                    <argument name="event" xsi:type="string">_product</argument>
                    <argument name="param" xsi:type="string">tag</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template" name="sare.cart.listener" template="SARE_SAREhub::listener.phtml" />
        </referenceContainer>
    </body>
</page>


